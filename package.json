{
  "name": "artie-web",
  "version": "1.0.0",
  "description": "web client for Artie",
  "main": "index.js",
  "author": "tomozip <dev.tomoki@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "echo \"no test specified\"",
    "lint": "eslint src/",
    "build": "webpack --config webpack.config.dev.babel.js",
    "watch": "webpack --config webpack.config.dev.babel.js --watch",
    "staging_build": "NODE_ENV=staging webpack --config webpack.config.prod.babel.js",
    "production_build": "NODE_ENV=production webpack --config webpack.config.prod.babel.js",
    "staging_server_build": "NODE_ENV=staging webpack --config webpack.config.server.babel.js && sed -i '1i require(\"newrelic\");' dist/server.js",
    "production_server_build": "NODE_ENV=production webpack --config webpack.config.server.babel.js && sed -i '1i require(\"newrelic\");' dist/server.js",
    "start": "nodemon src/server/index.js --exec babel-node --presets es2015 --watch src",
    "start-staging": "NODE_ENV=staging node ./dist/server.js",
    "start-production": "NODE_ENV=production node ./dist/server.js",
    "mock-server": "json-server --watch mock/db.json --routes mock/routes.json -p 3001"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tomozip/artie-web.git"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "es2017"
    ],
    "plugins": [
      "transform-object-assign",
      "transform-proto-to-assign"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome": "=1.0.1",
    "@fortawesome/fontawesome-free-regular": "^5.0.2",
    "@fortawesome/react-fontawesome": "^0.0.15",
    "axios": "^0.17.1",
    "express": "^4.16.2",
    "keymirror": "^0.1.1",
    "lodash": "^4.17.4",
    "material-ui": "^0.20.0",
    "newrelic": "^2.4.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-modal": "^3.1.11",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-localstorage": "^0.4.1",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-proto-to-assign": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "compass-mixins": "^0.12.10",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "json-server": "^0.12.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.6",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}
